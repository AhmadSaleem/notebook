<%- model_class = @language.class -%>

<%= render :partial => 'tabs' %>

<dl class="dl-horizontal hidden section general_section">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @language.name %></dd>
</dl>

<dl class="dl-horizontal hidden section vocabulary_section">
  <dt><strong><%= model_class.human_attribute_name(:words) %>:</strong></dt>
  <dd><%= @language.words %></dd>
</dl>

<dl class="dl-horizontal hidden section history_section">
  <dt><strong>Established year:</strong></dt>
  <dd><%= @language.established_year %></dd>
  <dt><strong>Established location:</strong></dt>
  <dd><%= @language.established_location %></dd>
</dl>

<dl class="dl-horizontal hidden section speakers_section">
  <dt><strong>Fluent characters:</strong></dt>
  <dd><%= @language.characters %></dd>
  <dt><strong>Locations spoken:</strong></dt>
  <dd><%= @language.locations %></dd>
</dl>

<dl class="dl-horizontal hidden section "more_section">
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              language_list_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              language_edit_path(@language), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              language_path(@equipment),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

