<%- model_class = @equipment.class -%>

<%= render :partial => 'tabs' %>

<dl class="dl-horizontal hidden section general_section">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= simple_format @equipment.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= simple_format @equipment.equip_type %></dd>
</dl>

<dl class="dl-horizontal hidden section appearance_section">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= simple_format @equipment.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= simple_format @equipment.weight %></dd>
</dl>

<dl class="dl-horizontal hidden section history_section">
  <dt><strong>Original owner:</strong></dt>
  <dd><%= simple_format link_if_present @equipment.original_owner, "character" %></dd>
  <dt><strong>Made by:</strong></dt>
  <dd><%= simple_format link_if_present @equipment.made_by, "character" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:materials) %>:</strong></dt>
  <dd><%= simple_format @equipment.materials %></dd>
  <dt><strong>Year made:</strong></dt>
  <dd><%= simple_format @equipment.year_made %></dd>
</dl>

<dl class="dl-horizontal hidden section abilities_section">
  <dt><strong><%= model_class.human_attribute_name(:magic) %>:</strong></dt>
  <dd><%= simple_format @equipment.magic %></dd>
</dl>

<dl class="dl-horizontal hidden section more_section">
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              equipment_list_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              equipment_edit_path(@equipment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              equipment_path(@equipment),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

