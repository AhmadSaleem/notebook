<div class="nested-fields">

  <% uuid = SecureRandom.uuid %>

  <% if f.object && f.object.sibling %>

    <div class="chip">
      <%= link_to f.object.sibling do %>
        <span class="<%= Character.color %>-text"><i class="material-icons left"><%= Character.icon %></i></span>
        <%= f.object.sibling.name %>
      <% end %>
    </div>

    <%= link_to_remove_association 'remove', f %>

  <% else %>

    <div class="input-field">
      <%= f.label :sibling %>
      <%= f.autocomplete_field :sibling_id, autocomplete_name_characters_path, 'data-auto-focus' => true, id_element: "##{uuid}" %>
      <%= f.hidden_field :sibling_id, id: uuid %>

      <%= link_to_remove_association 'remove', f %>
    </div>

  <% end %>
</div>