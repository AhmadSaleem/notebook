<div class="row">
  <div class="col s12 m12 l6">
    <div class="card hoverable">
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag 'card-headers/universes.jpg', class: 'activator', style: 'height: 390px' %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          You've created <%= current_user.universes.count %> universes
          <%= link_to universe_list_path, class: 'black-text' do %>
            <i class="material-icons right">zoom_out_map</i>
          <% end %>
          <i class="material-icons right">arrow_upward</i>
        </span>
        <p>
          <%= link_to 'Create another', universe_create_path %>
        </p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">
          Universes
          <i class="material-icons right">close</i>
        </span>
        <table>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created at</th>
            <th>Last modified</th>
            <th></th>
          </tr>
          <% current_user.universes.each do |universe| %>
          <tr>
            <td><%= link_to universe.name, universe %></td>
            <td><%= universe.description %></td>
            <td><%= universe.created_at.strftime("%m/%d/%Y") %></td>
            <td><%= universe.updated_at.strftime("%m/%d/%Y") %></td>
            <td>
              <%= link_to edit_universe_path(universe) do %>
                <i class="material-icons">edit</i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>
        <%= link_to 'Create another', universe_create_path, class: 'btn' %>
      </div>
    </div>
  </div>

